@using BlogFest.Web.ViewModels.Authorization
@model RecoveryPasswordViewModel


<form asp-action="RecoveryPassword" id="RecoveryPassword" method="post">

    <div class="form-group">
        <label>Email:</label>
        <input asp-for="Email" class="form-control text-start" /><br />
        <div>
            <span class="text-danger field-validation-valid" asp-validation-for="Email"></span>
        </div>
    </div>

    <div class="form-group text-start">
        <button type="submit" style="width:100%" class="btn btn-primary">Sign in</button>
    </div>

    <div class="form-group text-start">
        @Html.ValidationSummary(true)
    </div>

    <div class="form-group">
        <p>

            <a asp-action="Index">
                Back to signin
            </a>
        </p>
    </div>
</form>