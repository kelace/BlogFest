@using BlogFest.Web.ViewModels.Authorization
@model ResetPasswordViewModel

<form asp-action="ResetPassword" id="reset-form" method="post">

    <input asp-for="Email" type="hidden" />
    <input asp-for="Code" type="hidden" />

    <div class="form-group text-start">
        <label>Password:</label>
        <input asp-for="Password" class="form-control" /><br />
        <div>
            <span class="text-danger field-validation-valid" asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="form-group text-start">
        <label>Password Confirm:</label>
        <input asp-for="PasswordConfirm" class="form-control" /><br />
        <div>
            <span class="text-danger field-validation-valid" asp-validation-for="PasswordConfirm"></span>
        </div>
    </div>
    <div class="form-group">
        @Html.ValidationSummary(true)
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Reset Password</button>
    </div>
    <div class="form-group">
        <p>

            <a asp-action="Index">
                Back to signin
            </a>
        </p>
    </div>
</form>