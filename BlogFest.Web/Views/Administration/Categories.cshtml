@using BlogFest.Web.ViewModels.Administration
@model List<CategoryViewModel>

@{
	Layout = "~/Views/Administration/_AdminLayout.cshtml";
}
   <style>
        .card-body{
            display:flex;
        justify-content: space-between;
        }
   </style>

<form asp-action="ControlCategories" class="form-submit">

    <div id="repeater">
        <div class="repeater-heading mb-4">
          Add new categories
            <button class="btn btn-primary repeater-add-btn">
                Add
            </button>
        </div>
      
        <div class="items" data-group="test">

            @if (Model.Count == 0)
            {

                <div class="card mb-3" style="width: 36rem;">
                    <div class="card-body">
                        <h5 class="card-title"> </h5>
                        <input type="hidden" class="cat-id" name="[0].Id" />
                        <div class="form-check me-4">
                            <input class="" type="text" name="[0].Title">
                        </div>
                        <div class="form-check me-4">
                            <input class="" type="checkbox" name="[0].Enabled" checked>
                            <label name="[0].Enabled">Enabled</label>
                        </div>
                        <button type="button" class="btn btn-outline-danger btn-remove-js">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"></path>
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"></path>
                            </svg>
                            Button
                        </button>
                    </div>
                </div>
            } else
            {
                @for (int i = 0; i < Model.Count; i++)
                {

                    <div class="card mb-3" style="width: 36rem;">
                        <div class="card-body">
                            <h5 class="card-title"> @Model[i].Title</h5>
                            <input type="hidden" class="cat-id" asp-for="@Model[i].Id" />
                            <div class="form-check me-4">
                                <input class="" type="text" asp-for="@Model[i].Title">
                            </div>
                            <div class="form-check me-4">
                                <input class="form-check-input" type="checkbox" asp-for="@Model[i].Enabled">
                                <label asp-for="@Model[i].Enabled">Enabled</label>
                            </div>
                            <button type="button" class="btn btn-outline-danger btn-remove-js">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"></path>
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"></path>
                                </svg>
                                Button
                            </button>
                        </div>
                    </div>
                }
            }

        </div>
      
    </div>


    <button class="btn btn-primary" type="submit">
        Save
    </button>
</form>

@section Scripts{
    <script src="~/lib/jquery-repeater/repeater.js"></script>

    <script>
        //$(function () {
        //    $("#repeater").createRepeater();
        //});

        $(document).ready(function(){
            var index = @Model.Count;
            debugger;
            $('.repeater-add-btn').on('click', function(e){
                e.preventDefault();
                debugger;

                var component = `<div class="card mb-3" style="width: 36rem;">
                        <div class="card-body">
                            <h5 class="card-title"> </h5>
                                    <input type="hidden" class="cat-id" name="[${index}].Id" value="-1"/>
                                    <div class="form-check">
                                        <input class="" type ="text" name="[${index}].Title">
                                      
                                                </div>
                                                <div class="form-check">
                                                                    <input class="" type="checkbox" name="[${index}].Enabled" checked value="true">
                                                                <label name="Model[0].Enabled">Enabled</label>
                                                            </div>
                                                                                   <button type="button" class="btn btn-outline-danger btn-remove-js">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"></path>
                                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"></path>
                                        </svg>
                                        Button
                                    </button>
                                                            </div>
                                                            </div>`;

                var el  = document.createElement('div');
                el.innerHTML = component;
                //var comHtml = $(component);
                $('.items')[0].prepend(el);;
                index++;

            });

        });

        $('.form-submit').on('submit', function(e){
            e.preventDefault();
            $.ajax({
                method:'post',
                url: '@Url.Action("AddOrEditCategories")',
                data: $(this).serialize(),
                success:function(data){
                    console.log(data);
                }
            });
        });

        $(document).on('click', '.btn-remove-js', function (e) {
            e.preventDefault();
            debugger;
            var id = $(this).prevAll('.cat-id').attr('value');

            var confirmValue = confirm('do you want to delete this category?');
            
            if(confirmValue == false) return;

            if(id == "-1"){
                location.reload();
                return;
            }

            $.ajax({
                method:'delete',
                url:'@Url.Action("DeleteCategory")',
                data: {id: id},
                success: function(data){
                    console.log(data);
                    location.reload();
                }
            });

            console.log(confirmValue);
            console.log(id);
        });

    </script>
}


