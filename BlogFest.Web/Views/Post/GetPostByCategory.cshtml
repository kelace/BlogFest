@using BlogFest.Application.Services.Content.Queries.DTOs;

@{
	ViewData["Title"] = "Posts Category";
}

@model List<PostDTO>

<div class="row mt-5">
    <div class="col-lg-8">
        <div class="list-group">
            @if (Model != null)
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    <a href="@Url.Action("Index", "Post", new {Id = Model[i].Id })" class="list-group-item list-group-item-action mb-3 bg-light" aria-current="true">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@Model[i].Title</h5>
                            <small>@Model[i].DateCreated</small>
                        </div>
                    </a>
                }
            }

            <nav aria-label="...">
                <ul class="pagination">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item active" aria-current="page">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>